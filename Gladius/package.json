{
    "name": "rubicon-v2",
    "version": "0.1.0",
    "author": "denver",
    "scripts": {
        "test": "graph test",
        "coverage": "graph test -- -c",

        "prepare:arbitrum": "mustache config/arbitrum.json subgraph.template.yaml > subgraph.yaml",
        "prepare:arbitrum:goerli": "mustache config/arbitrum_goerli.json subgraph.template.yaml > subgraph.yaml",
        
        "prepare:optimism": "mustache config/optimism.json subgraph.template.yaml > subgraph.yaml",

        "codegen": "graph codegen",
        "build": "graph build",
        "deploy:arbitrum": "graph deploy --product hosted-service denverbaumgartner/rubiconv2-arbitrum-one",
        "deploy:arbitrum:goerli": "graph deploy --product hosted-service denverbaumgartner/rubiconv2-arbitrum-goerli",
        "deploy:polygon:mumbai": "graph deploy --product hosted-service denverbaumgartner/rubiconv2-polygon-mumbai",
        "deploy:base:goerli": "graph deploy --product hosted-service denverbaumgartner/rubiconv2-based-goerli",
        "create-local": "graph create --node http://localhost:8020/ RubiconV2",
        "remove-local": "graph remove --node http://localhost:8020/ RubiconV2",
        "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 RubiconV2",

        "create:cloud:arbitrum:goerli": "source ../.env && graph create --node $GRAPH_NODE_URL RubiconV2_Arbitrum_Goerli",
        "remove:cloud:arbitrum:goerli": "source ../.env && graph remove --node $GRAPH_NODE_URL RubiconV2_Arbitrum_Goerli",
        "deploy:cloud:arbitrum:goerli": "source ../.env && graph deploy --node $GRAPH_NODE_URL --ipfs $IPFS_URL RubiconV2_Arbitrum_Goerli",

        "create:cloud:arbitrum:goerli:temp": "source ../.env && graph create --node $GRAPH_NODE_URL_TEMP RubiconV2_Arbitrum_Goerli",
        "remove:cloud:arbitrum:goerli:temp": "source ../.env && graph remove --node $GRAPH_NODE_URL_TEMP RubiconV2_Arbitrum_Goerli",
        "deploy:cloud:arbitrum:goerli:temp": "source ../.env && graph deploy --node $GRAPH_NODE_URL_TEMP --ipfs $IPFS_URL_TEMP RubiconV2_Arbitrum_Goerli",

        "create:cloud:arbitrum": "source ../.env && graph create --node $GRAPH_NODE_URL RubiconV2_Arbitrum_One",
        "remove:cloud:arbitrum": "source ../.env && graph remove --node $GRAPH_NODE_URL RubiconV2_Arbitrum_One",
        "deploy:cloud:arbitrum": "source ../.env && graph deploy --node $GRAPH_NODE_URL --ipfs $IPFS_URL RubiconV2_Arbitrum_One",

        "create:cloud:arbitrum:temp": "source ../.env && graph create --node $GRAPH_NODE_URL_TEMP RubiconV2_Arbitrum_One",
        "remove:cloud:arbitrum:temp": "source ../.env && graph remove --node $GRAPH_NODE_URL_TEMP RubiconV2_Arbitrum_One",
        "deploy:cloud:arbitrum:temp": "source ../.env && graph deploy --node $GRAPH_NODE_URL_TEMP --ipfs $IPFS_URL_TEMP RubiconV2_Arbitrum_One",

        "create:cloud:base:goerli": "source ../.env && graph create --node $GRAPH_NODE_URL RubiconV2_Base_Goerli",
        "remove:cloud:base:goerli": "source ../.env && graph remove --node $GRAPH_NODE_URL RubiconV2_Base_Goerli",
        "deploy:cloud:base:goerli": "source ../.env && graph deploy --node $GRAPH_NODE_URL --ipfs $IPFS_URL RubiconV2_Base_Goerli",

        "create:cloud:base:goerli:temp": "source ../.env && graph create --node $GRAPH_NODE_URL_TEMP RubiconV2_Base_Goerli",
        "remove:cloud:base:goerli:temp": "source ../.env && graph remove --node $GRAPH_NODE_URL_TEMP RubiconV2_Base_Goerli",
        "deploy:cloud:base:goerli:temp": "source ../.env && graph deploy --node $GRAPH_NODE_URL_TEMP --ipfs $IPFS_URL_TEMP RubiconV2_Base_Goerli",

        "create:cloud:base": "source ../.env && graph create --node $GRAPH_NODE_URL RubiconV2_Base_Mainnet",
        "remove:cloud:base": "source ../.env && graph remove --node $GRAPH_NODE_URL RubiconV2_Base_Mainnet",
        "deploy:cloud:base": "source ../.env && graph deploy --node $GRAPH_NODE_URL --ipfs $IPFS_URL RubiconV2_Base_Mainnet",

        "create:cloud:base:temp": "source ../.env && graph create --node $GRAPH_NODE_URL_TEMP RubiconV2_Base_Mainnet",
        "remove:cloud:base:temp": "source ../.env && graph remove --node $GRAPH_NODE_URL_TEMP RubiconV2_Base_Mainnet",
        "deploy:cloud:base:temp": "source ../.env && graph deploy --node $GRAPH_NODE_URL_TEMP --ipfs $IPFS_URL_TEMP RubiconV2_Base_Mainnet"
    },
    "devDependencies": {
        "@graphprotocol/graph-cli": "^0.48.0",
        "@graphprotocol/graph-ts": "^0.29.3",
        "dotenv": "^16.0.3",
        "matchstick-as": "^0.5.2",
        "mustache": "^3.1.0"
    }
}
